<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16sp"
    android:paddingRight="16sp"
    android:paddingTop="16sp"
    android:paddingBottom="16sp" tools:context=".MainActivity"
    android:background="#ffbef1ff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START/STOP"
        android:id="@+id/Start_button"
        android:singleLine="false"
        android:layout_above="@+id/button_Reset"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/digitalClock"
        android:layout_marginTop="50dp"
        android:text="Speed :  0 km/h"
        android:textSize="40dp" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:textSize="50dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textViewDistance"
        android:layout_centerHorizontal="true" />

    <DigitalClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/digitalClock"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Start_button"
        android:layout_alignStart="@+id/Start_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/button_Reset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewSpeed"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/textViewSpeed"
        android:layout_below="@+id/textViewSpeed"
        android:layout_marginTop="22dp"
        android:text="Distance :       km"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewAverageSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Start_button"
        android:layout_alignLeft="@+id/textsocket"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textViewDistance"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textsocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Start_button"
        android:layout_alignRight="@+id/Start_button"
        android:layout_below="@+id/chronometer"
        android:layout_marginTop="55dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="25sp" />

</RelativeLayout>
